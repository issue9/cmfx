{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ESNext",
        "moduleResolution": "bundler",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true, // 更好的包兼容
        "forceConsistentCasingInFileNames": true, // 区分文件名大小写
        "strict": true
    }
}
