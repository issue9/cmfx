{
    "compilerOptions": {
        "composite": true,
        "skipLibCheck": true,
        "module": "ESNext",
        "target": "ESNext",
        "declaration": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true, // 更好的包兼容
        "forceConsistentCasingInFileNames": true, // 区分文件名大小写
        "rootDir": "./src",
        "outDir": "./lib"
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "lib",
        "node_modules"
    ],
}
