<web>
    <http port=":8080" />
    <logs created="15:04:05.000" caller="true">
        <handlers>
            <handler type="file">
                <arg>./logs</arg>
                <arg>20060102-%i.log</arg>
                <arg>10485760</arg><!-- çº¦ 10M -->
