<?xml version="1.0" encoding="utf-8" ?>
<web>
    <http port=":8080">
        <url>http://192.168.10.10:8080</url>
        <cors maxAge="3600">
            <origins>
                <origin>*</origin>
            </origins>
            <allowHeaders>
                <header>*</header>
            </allowHeaders>
        </cors>
    </http>
    <logs created="15:04:05.000" caller="true">
        <handlers>
            <handler type="file">
                <arg>./logs</arg>
                <arg>20060102-%i.log</arg>
                <arg>10485760</arg><!-- çº¦ 10M -->
            </handler>
            <handler type="term">
                <arg>stdout</arg>
            </handler>
        </handlers>
    </logs>

    <encodings>
        <encoding id="deflate-default">
            <type>*</type>
        </encoding>
        <encoding id="gzip-default">
            <type>*</type>
        </encoding>
        <encoding id="br-default">
            <type>*</type>
        </encoding>
        <encoding id="compress-msb-8">
            <type>*</type>
        </encoding>
    </encodings>

    <mimetypes>
        <mimetype type="application/json" target="json" problem="application/problem+json" />
        <mimetype type="application/yaml" target="yaml" problem="application/problem+yaml" />
        <mimetype type="application/xml" target="xml" problem="application/problem+xml" />
        <mimetype type="application/cbor" target="cbor" problem="application/problem+cbor" />
        <mimetype type="text/xml" target="xml" problem="text/problem+xml" />
        <mimetype type="text/html" target="html" problem="text/html" />
        <mimetype type="multipart/form-data" target="nop" />
    </mimetypes>

    <fileSerializers>
        <fileSerializer>json</fileSerializer>
        <fileSerializer>xml</fileSerializer>
        <fileSerializer>yaml</fileSerializer>
    </fileSerializers>

    <user>
        <ratelimit capacity="50">
            <rate>1s</rate>
            <prefix>ratelimit___</prefix>
        </ratelimit>

        <db type="sqlite3">
            <dsn>./server.db?_loc=UTC</dsn>
        </db>

        <member>
            <user accessExpired="1h" refreshExpired="24h">
                <urlPrefix>/member</urlPrefix>
            </user>
            <upload size="902411">
                <exts>
                    <ext>.jpg</ext>
                    <ext>.jpeg</ext>
                    <ext>.png</ext>
                    <ext>.gif</ext>
                </exts>
                <field>files</field>
            </upload>
        </member>
        
        <admin superUser="1">
            <user accessExpired="1h" refreshExpired="24h">
                <urlPrefix>/admin</urlPrefix>
            </user>
            <upload size="902411">
                <exts>
                    <ext>.jpg</ext>
                    <ext>.jpeg</ext>
                    <ext>.png</ext>
                    <ext>.gif</ext>
                </exts>
                <field>files</field>
            </upload>
        </admin>

        <system>
            <urlPrefix>/system</urlPrefix>
            <backup>
                <dir>./backup</dir>
                <format>20060102-150405.sql</format>
                <cron>@daily</cron>
            </backup>
        </system>
    </user>
</web>
