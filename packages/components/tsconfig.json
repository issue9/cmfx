{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "types": [
            "vite/client",
            "@testing-library/jest-dom"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "outDir": "./lib"
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.mts",
        "src/**/*.mjs",
        "src/**/*.js",
        "src/**/*.tsx",
    ],
    "exclude": [
        "lib",
    ],
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}